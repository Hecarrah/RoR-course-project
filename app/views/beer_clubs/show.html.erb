

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>


<h3>Members:</h3>
<p>
<ul>
  <% @beer_club.members.each do |m| %>
    <li><%= link_to m.username, user_path(m) %></li>
    <% end %>
</ul>
</p>

<% if current_user %>
<% if @beer_clubs.find_by_id(@beer_club.id) %>
<%= form_for(@membership, method: "delete") do |f| %>
 <%= f.hidden_field :beer_club_id %>
 <%=f.submit value: "end the membership in the club",class:"btn btn-primary" %>
<% end %>
<%else%>
<%= form_for(@membership) do |f| %>
 <%= f.hidden_field :beer_club_id %>
 <%=f.submit value:"join the club",class:"btn btn-primary" %>
 <% end%>
<% end %>
<% end %>


<%= edit_and_destroy_buttons(@beer_club) %>
<%= link_to 'Back', beer_clubs_path %>
