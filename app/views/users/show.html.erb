<p id="notice"><%= notice %></p>

<h2>
  <strong>Username:</strong>
  <%= @user.username %>
</h2>

<p>
  has <%= @user.ratings.count %> ratings, averaging at <%= @user.average_rating %>
</p>

<h3>Ratings </h3>
<ul>
 <% @user.ratings.each do |rating| %>
    <% if @user == current_user %>
    <li> <%= rating %> <%= link_to 'delete', rating_path(rating.id), method: :delete,data: { confirm: 'Are you sure?' }%> </li>
    <% end %>
 <% end %>
</ul>

<h3>Beer Clubs:</h3>
<p>
<ul>
  <% @user.beer_clubs.each do |m| %>
    <li><%= link_to m.name, beer_club_path(m) %></li>
    <% end %>
</ul>
</p>
<% if @user == current_user %>
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_user_path(@user) %> 
<% end %>
<%= link_to 'Back', users_path %>

