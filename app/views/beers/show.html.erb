<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%=link_to @beer.style_name, style_path(@beer.style_id) %>
</p>

<p>
  <strong>Brewery:</strong>
  <%=link_to Brewery.find(@beer.brewery_id).name, brewery_path(@beer.brewery_id) %>
</p>

<p>
<strong>Ratings: </strong>
<% if @beer.ratings.empty? %>
 beer has not yet been rated!
<% else %>
<%= pluralize(@beer.ratings.count, 'rating')%>, with the average being <%= @beer.average_rating%>
<% end %>
</p>

<% if current_user %>
  <h4>give a rating:</h4>

  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score: <%= f.number_field :score %>
    <%= f.submit %>
  <% end %>
<% end %>
<p></p>
<%= link_to 'Edit |', edit_beer_path(@beer) unless current_user.nil?%>
<%= link_to 'Back', beers_path %> |
<%= link_to 'list of breweries', breweries_path %>
