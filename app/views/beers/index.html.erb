<h1>Beers</h1>

<% cache "beerlist-#{@order}", skip_digest: true do %>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= link_to 'Name', beers_path(order:"name") %> </th>
      <th> <%= link_to 'Style', beers_path(order:"style") %> </th>
      <th> <%= link_to 'Brewery', beers_path(order:"brewery") %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.style_name, style_path(beer.style_id) %></td>
        <td><%= link_to beer.brewery.name, breweries_path %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer)  unless current_user.nil?%></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' }  unless current_user.nil?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
<br>

<%= link_to('New Beer', new_beer_path,  class:'btn btn-light') unless current_user.nil? %>
<%= link_to 'list of breweries', breweries_path,  class:'btn btn-light' %>